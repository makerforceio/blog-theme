{{!< default}}

{{#post}}

{{#if feature_image}}
	<img class="post-feature-image" src="{{feature_image}}" width="1024">
{{/if}}

<article class="post-full {{post_class}}">
	<header>
		<h1>{{title}}</h1>
	</header>

	{{content}}

	<div class="post-meta">
		{{> "article-meta"}}
	</div>
</article>

