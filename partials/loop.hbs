<div class="articles">

	<div class="pagination-top">
		{{pagination}}
	</div>

	{{!-- This is the post loop - each post will be output using this markup --}}
	{{#foreach posts}}
		<article class="{{post_class}}">
			<h2><a href="{{url}}">{{title}}</a></h2>
			<div class="preview">
				{{content characters="1000"}}
			</div>
			{{!--
			<p>
				<a class="read-more" title="Read post" href="{{url}}">Continue reading &raquo;</a>
			</p>
			--}}
			{{> "article-meta"}}
		</article>
	{{/foreach}}

	<div class="pagination-bottom">
		{{pagination}}
	</div>

</div>
